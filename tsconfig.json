{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "esModuleInterop": true,   
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "paths": {
         "*": [
            "./node_modules/*",
            "./src/types/*"
         ]
      }
   },
   "include": [
      "./src/**/*"
   ]
}